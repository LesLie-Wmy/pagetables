{
  "name": "pagetables",
  "version": "0.0.3",
  "author": {
    "name": "Sam Maosa",
    "email": "maosa.sam@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/savannabits/pagetables"
  },
  "license": "MIT",
  "description": "Flexible server-side datatables using Laravel's default pagination with tailwindcss default styling.",
  "main": "dist/pagetables.ssr.js",
  "browser": "dist/pagetables.esm.js",
  "module": "dist/pagetables.esm.js",
  "unpkg": "dist/pagetables.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "scripts": {
    "serve": "vue-cli-service serve dev/serve.js",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "autoprefixer": "^9",
    "axios": "^0.21.1",
    "cross-env": "^7.0.2",
    "minimist": "^1.2.5",
    "postcss": "^7",
    "rollup": "^2.7.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-vue": "^5.1.6",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "publishConfig": { 
    "access": "public", 
    "branches": ["master"] 
  },
  "engines": {
    "node": ">=10"
  }
}
